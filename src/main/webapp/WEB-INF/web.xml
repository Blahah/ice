	<!-- Apache CXF WebServices -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>WEB-INF/cxf/beans.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>CXFServlet</servlet-name>
		<servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>CXFServlet</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>
	
	<!-- GWT -->
    <servlet>
        <servlet-name>gwtIceServlet</servlet-name>
        <servlet-class>org.jbei.ice.server.RegistryServiceImpl</servlet-class>
    </servlet>
  
    <servlet-mapping>
        <servlet-name>gwtIceServlet</servlet-name>
        <url-pattern>/gwt_ice/ice</url-pattern>
    </servlet-mapping>
    
    <!-- file upload from gwt -->
    <servlet>
        <servlet-name>fileUploaderServlet</servlet-name>
        <servlet-class>org.jbei.ice.server.FileUploadServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>fileUploaderServlet</servlet-name>
        <url-pattern>*.gupld</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>Gwt_ice.html</welcome-file>
    </welcome-file-list>
</web-app>