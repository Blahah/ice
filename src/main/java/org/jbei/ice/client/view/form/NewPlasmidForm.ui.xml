<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
<!-- <ui:style src="" -->


<g:HTMLPanel>
	<table cellspacing="1" cellpadding="3" border="0" class="entry_table">
        <tbody><tr class="title_row_header">
            <td><span class="panel_header">New Plasmid</span></td>
        </tr>
        <tr>
            <td bgcolor="#ffffff">
            <table width="100%" cellspacing="2" cellpadding="0" border="0">

                <tbody><tr>
                    <td style="width: 150px">Name: <span class="required">*</span></td>
                    <td><input name="names" value="" maxlength="127" class="inputbox" />&nbsp;<span class="help_text">e.g. pTSH117</span></td>
                </tr>
                <tr>
                    <td style="width: 150px">Creator: <span class="required">*</span></td>
                    <td><input name="creator"  value="" class="inputbox" />&nbsp;<span class="help_text">Who made this part?</span></td>
                </tr>
                <tr>
                    <td style="width: 150px">Creator's Email:</td>
                    <td><input name="creatorEmail" value="" class="inputbox" />&nbsp;<span class="help_text">If known</span></td>
                </tr>
                <tr>
                    <td style="width: 150px">Status:</td>
                    <td>
                        <select name="status" class="inputbox">
							<option value="complete" selected="selected">Complete</option>
							<option value="in progress">In Progress</option>
							<option value="planned">Planned</option>
						</select>
				    </td>
                </tr>
                <tr>
                    <td style="width: 150px">Alias:</td>
                    <td><input name="alias" value="" maxlength="127" class="inputbox" /></td>
                </tr>
                <tr>
                    <td style="width: 150px">Links:</td>
                    <td><input name="links" value="" style="width: 300px;" maxlength="127" class="inputbox" />&nbsp;<span class="help_text">Comma Separated</span></td>
                </tr>
                <tr>
                    <td style="width: 150px">Circular:</td>
                    <td><input type="checkbox" name="circular" checked="checked" class="inputbox" /></td>
                </tr>
                <tr>
                    <td style="width: 150px">Backbone:</td>
                    <td><input name="backbone" value="" style="width: 300px;" maxlength="127" class="inputbox" /></td>
                </tr>
                <tr>
                    <td style="width: 150px">Selection Markers:</td>
                    <td><g:SuggestBox ui:field="selectionMarkerBox" styleName="inputbox"></g:SuggestBox>&nbsp;<span class="help_text">Comma Separated</span></td>
                </tr>
                <tr>
                    <td style="width: 150px">Origin of Replication:</td>
                    <td><input name="originOfReplication" value="" maxlength="127" style="width: 300px;" id="originOfReplication" class="inputbox originOfReplicationInput ac_input" autocomplete="off" />&nbsp;<span class="help_text">Comma Separated</span></td>
                </tr>
                <tr>
                    <td style="width: 150px">Promoters:</td>
                    <td><input name="promoters" value="" maxlength="127" class="inputbox promotersInput ac_input" style="width: 300px;" autocomplete="off" />&nbsp;<span class="help_text">Comma Separated</span></td>
                </tr>
                <tr>
                    <td style="width: 150px">Keywords:</td>
                    <td><input name="keywords" value="" style="width: 640px;" maxlength="127" class="inputbox" /></td>
                </tr>
                <tr>
                    <td style="width: 150px">Summary: <span class="required">*</span></td>
                    <td><textarea class="form_textarea" cols="20" id="id_short_description" name="summary" rows="3" style="width: 640px; height: 50px"></textarea></td>
                </tr>
                <tr>
                    <td style="width: 150px">References:</td>
                    <td><textarea class="form_textarea" cols="20" id="id_references" name="references" rows="5" style="width: 640px; height: 50px"></textarea></td>
                </tr>
                <tr>
                    <td style="width: 150px">Bio Safety Level:</td>
                    <td><select name="bioSafetyLevel" class="inputbox">
						<option value="1" selected="selected">Level 1</option>
						<option value="2">Level 2</option>
						</select></td>
                </tr>
                <tr>
                    <td style="width: 150px">Intellectual Property:</td>
                    <td><textarea class="form_textarea" cols="20" name="intellectualProperty" rows="3" style="width: 640px; height: 50px"></textarea></td>
                </tr>
                <tr>
                    <td style="width: 150px">Funding Source:</td>
                    <td><input type="text" name="fundingSource" value="" maxlength="255" class="inputbox" /></td>
                </tr>
                <tr>
                    <td style="width: 150px">Principal Investigator: <span class="required">*</span></td>
                    <td><input name="principalInvestigator" value="" maxlength="255" class="inputbox" /></td>
                </tr>
                <tr>
                    <td style="width: 150px">Parameters:</td>
                    <td>
                        <input name="parameters" value="" style="width: 500px;" maxlength="255" class="inputbox" />
                        <span class="help_text"><br />Example: text_parameter="Some text.",number_parameter=23.45,boolean_parameter=true</span>
                    </td>
                </tr>
                <tr>
                    <td style="width: 150px">Sample Name:</td>
                    <td><input name="sampleName" value="" maxlength="255" class="inputbox" />
                    &nbsp;<span class="help_text">(Optional. Required if location is specified below)</span></td>
                </tr>
                <tr>
                    <td style="width: 150px">Sample Notes:</td>
                    <td><textarea name="sampleNotes" rows="3" class="inputarea"></textarea>
                    </td>
                </tr>
                <tr>
                    <td style="width: 150px">Sample Location:</td>
                    <td>
                        <select name="schemeChoices" class="inputbox">
                            <option value="4" selected="selected">Plasmid Storage (Default)</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td style="width:150px">&nbsp;</td>
                    <td><span class="help_text">(Must specify Sample Name above)</span>
                    <span id="id8">
    <table>
        <tbody><tr>
            <td><span>Shelf</span></td>
            <td><input type="text" value="" class="inputbox" /></td>
        </tr><tr>
            <td><span>Box</span></td>
            <td><input type="text" class="inputbox" /></td>
        </tr><tr>
            <td><span>Tube</span></td>
            <td><input type="text" value="" class="inputbox" /></td>
        </tr>
    </tbody></table>
</span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">&nbsp;</td>
                </tr>
                <tr>
                    <td valign="top" style="width: 150px">Notes:</td>
                    <td>
                        Markup Type: <select name="notesMarkupType" onchange="document.getElementById('id7_hf_0').value='?wicket:interface=:1:formPanel:plasmidForm:notesMarkupType:1:IOnChangeListener::';document.getElementById('id7').submit();" class="inputbox">
<option value="text" selected="selected">Text</option>
<option value="wiki">Wiki</option>
<option value="confluence">Confluence</option>
</select>
                        <br />
                        <br />
                        <span id="id9">
        <div id="ida">
        <textarea id="idb" class="inputarea" cols="20" name="markupPanel:form:notes" rows="5" style="width: 640px; height: 480px" autocomplete="off"></textarea>
        </div>
    </span>
                    </td>
                </tr>
                <tr>
                    <td style="width: 150px">&nbsp;</td>
                    <td><g:Button ui:field="submitButton">Save</g:Button>
                    </td>
                </tr>
            </tbody></table>
            </td>
        </tr>
    </tbody></table>
</g:HTMLPanel>


</ui:UiBinder>
