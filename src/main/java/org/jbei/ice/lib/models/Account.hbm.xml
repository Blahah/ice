<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.jbei.ice.lib.models">
    <class name="Account" table="accounts">
        <id name="id" column="id" type="int">
            <generator class="sequence">
                <param name="sequence">accounts_id_seq</param>
            </generator>
        </id>
        <property name="password" column="password" type="string" length="32" not-null="true" />
        <property name="firstName" column="firstname" type="string" length="50" not-null="true" />
        <property name="lastName" column="lastname" type="string" length="50" not-null="true" />
        <property name="initials" column="initials" type="string" length="10" not-null="true" />
        <property name="email" column="email" type="string" length="100" not-null="true" />
        <property name="institution" column="institution" type="string" length="255" not-null="true" />
        <property name="isSubscribed" column="is_subscribed" type="int" not-null="true" />
        <property name="description" column="description" type="text" not-null="true" />
        <property name="ip" column="ip" type="string" length="20" not-null="true" />
        <property name="creationTime" column="creation_time" type="timestamp" />
        <property name="modificationTime" column="modification_time" type="timestamp" />
        <property name="lastLoginTime" column="lastlogin_time" type="timestamp" />
    </class>
</hibernate-mapping>
